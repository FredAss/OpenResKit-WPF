    <TextBlock
      Style="{DynamicResource LabelControl}"
      Text="{lex:Loc OldNew}"
      FontSize="16"
      FontWeight="Bold"
      Grid.Row="0"
      Margin="2 10 0 13" />

    <TextBlock
      Style="{DynamicResource LabelControl}"
      Text="{lex:Loc Lifetime}"
      Grid.Row="1" />

