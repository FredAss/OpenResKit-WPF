<UserControl
  x:Class="Ork.Employee.UI.Views.EmployeeManagementView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:cal="http://www.caliburnproject.org"
  xmlns:global="clr-namespace:Ork.Framework.Controls;assembly=Ork.Framework"
  xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
  xmlns:lex="http://wpflocalizeextension.codeplex.com"
  xmlns:controls="clr-namespace:Ork.Framework.Controls;assembly=Ork.Framework"
  lex:LocalizeDictionary.DesignCulture="de"
  lex:ResxLocalizationProvider.DefaultAssembly="Ork.Employee.UI"
  lex:ResxLocalizationProvider.DefaultDictionary="Translate"
  mc:Ignorable="d"
  d:DesignHeight="300"
  d:DesignWidth="550">

  <Grid>

    <Grid.ColumnDefinitions>
      <ColumnDefinition />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
      <RowDefinition
        Height="Auto" />
      <RowDefinition
        Height="*" />
      <RowDefinition
        Height="Auto" />
      <RowDefinition
        Height="Auto" />
    </Grid.RowDefinitions>

    <!--Employee -->
    <TextBlock
      Grid.Column="0"
      Grid.Row="0"
      Style="{DynamicResource HeaderTextBlockStyle}"
      Text="{lex:Loc Employee}" />
    <Grid
      Grid.Column="0"
      Grid.Row="1"
      Margin="12"
      Background="{DynamicResource WorkspaceBackgroundColorBrush}">
      <Grid.RowDefinitions>
        <RowDefinition
          Height="Auto" />
        <RowDefinition />
      </Grid.RowDefinitions>


      <AdornerDecorator
        Grid.Row="0">
        <xctk:AutoSelectTextBox
          Style="{DynamicResource EntryControl}"
          Text="{Binding EmployeeSearchText, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged, Delay=300}">

          <controls:WatermarkService.Watermark>
            <TextBlock
              Foreground="{DynamicResource TextForegroundColorBrush}"
              Text="{lex:Loc Ork.Employee.UI:Translate:FilterEmployees}" />
          </controls:WatermarkService.Watermark>

        </xctk:AutoSelectTextBox>
      </AdornerDecorator>

      <ListBox
        Grid.Row="1"
        Margin="12 0 6 0"
        ItemsSource="{Binding FilteredEmployees}"
        SelectedItem="{Binding SelectedEmployee, Mode=TwoWay}"
        Style="{DynamicResource FlyoutListBoxStyle}">

        <ListBox.ItemTemplate>
          <DataTemplate>
            <Grid
              Margin="0 3 0 3"
              cal:Message.Attach="[Event MouseLeftButtonDown]=[Action OpenEditor($dataContext, $eventArgs)]"
              Background="Transparent">

              <StackPanel>
                <TextBlock
                  HorizontalAlignment="Left"
                  FontSize="16"
                  TextTrimming="CharacterEllipsis"
                  Text="{Binding LastName}" />

                <TextBlock
                  HorizontalAlignment="Left"
                  FontSize="10"
                  TextTrimming="CharacterEllipsis"
                  Text="{Binding FirstName}" />

              </StackPanel>

              <Button
                Margin="0 2 0 2"
                HorizontalAlignment="Right"
                Style="{DynamicResource UnstyledButtonStyle}"
                cal:Message.Attach="OpenEditor($datacontext)"
                Cursor="Hand"
                ToolTipService.ToolTip="{lex:Loc Edit}">

                <Path
                  Style="{DynamicResource IconPencil}" />

              </Button>

            </Grid>
          </DataTemplate>
        </ListBox.ItemTemplate>

      </ListBox>
    </Grid>

    <Button
      Grid.Column="0"
      Grid.Row="3"
      Margin="0 0 12 12"
      HorizontalAlignment="Right"
      cal:Message.Attach="AddEmployee"
      Content="{lex:Loc Add}" />

    <!--EmployeeGroups -->
    <TextBlock
      Grid.Column="1"
      Grid.Row="0"
      Style="{DynamicResource HeaderTextBlockStyle}"
      Text="{lex:Loc Groups}" />

    <Grid
      Grid.Column="1"
      Grid.Row="1"
      Margin="12"
      Background="{DynamicResource WorkspaceBackgroundColorBrush}">
      <Grid.RowDefinitions>
        <RowDefinition
          Height="Auto" />
        <RowDefinition />
      </Grid.RowDefinitions>


      <AdornerDecorator
        Grid.Row="0">
        <xctk:AutoSelectTextBox
          Style="{DynamicResource EntryControl}"
          Text="{Binding EmployeeGroupSearchText, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged, Delay=300}">

          <global:WatermarkService.Watermark>
            <TextBlock
              Foreground="{DynamicResource TextForegroundColorBrush}"
              Text="{lex:Loc Ork.Employee.UI:Translate:FilterGroups}" />
          </global:WatermarkService.Watermark>

        </xctk:AutoSelectTextBox>
      </AdornerDecorator>

      <!--EmployeeGroupList-->
      <ListBox
        Grid.Row="1"
        Margin="12 0 6 0"
        ItemsSource="{Binding FilteredEmployeeGroups}"
        SelectedItem="{Binding SelectedEmployeeGroup, Mode=TwoWay}"
        Style="{DynamicResource FlyoutListBoxStyle}">

        <ListBox.ItemTemplate>
          <DataTemplate>
            <Grid
              Margin="0 3 0 3"
              cal:Message.Attach="[Event MouseLeftButtonDown]=[Action OpenEditor($dataContext, $eventArgs)]"
              Background="Transparent">

              <TextBlock
                Margin="0 0 0 4"
                HorizontalAlignment="Left"
                FontSize="16"
                Text="{Binding Name}"
                TextTrimming="CharacterEllipsis" />

              <Button
                Margin="0 2 0 2"
                HorizontalAlignment="Right"
                Style="{DynamicResource UnstyledButtonStyle}"
                cal:Message.Attach="OpenEditor($datacontext)"
                Cursor="Hand"
                ToolTipService.ToolTip="{lex:Loc Edit}">

                <Path
                  Style="{DynamicResource IconPencil}" />

              </Button>

            </Grid>
          </DataTemplate>
        </ListBox.ItemTemplate>

      </ListBox>

    </Grid>

    <Border
      Grid.Column="0"
      Grid.ColumnSpan="2"
      Grid.Row="2"
      Margin="12 5 12 10"
      Padding="10 3 10 3"
      Visibility="{Binding HaveEditsBeenMade}"
      BorderThickness="1px"
      BorderBrush="IndianRed">
      <StackPanel>
        <TextBlock
          Margin="0 0 0 12"
          HorizontalAlignment="Center"
          Text="{lex:Loc EditingCoreDataDisclaimer}" />
        <Button
          HorizontalAlignment="Center"
          Content="{lex:Loc RestartNow}"
          cal:Message.Attach="RefreshDataSource" />
      </StackPanel>
    </Border>

    <Button
      Grid.Column="1"
      Grid.Row="3"
      Margin="0 0 12 12"
      HorizontalAlignment="Right"
      cal:Message.Attach="AddEmployeeGroup"
      Content="{lex:Loc Add}" />

    <ContentControl
      x:Name="Dialogs"
      Grid.Column="0"
      Grid.ColumnSpan="2"
      Grid.Row="0"
      Grid.RowSpan="3"
      HorizontalContentAlignment="Stretch"
      VerticalContentAlignment="Stretch" />

  </Grid>

</UserControl>