<UserControl
  x:Class="Ork.CarbonFootprint.Views.TagColorPickerView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:lex="http://wpflocalizeextension.codeplex.com"
  xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
  lex:LocalizeDictionary.DesignCulture="de"
  lex:ResxLocalizationProvider.DefaultAssembly="Ork.CarbonFootprint"
  lex:ResxLocalizationProvider.DefaultDictionary="Translate">

  <StackPanel>

    <ItemsControl
      Background="Transparent"
      BorderBrush="Transparent"
      BorderThickness="0"
      ItemsSource="{Binding Tags}"
      HorizontalContentAlignment="Stretch"
      Height="Auto">
      <ItemsControl.ItemTemplate>

        <DataTemplate>

          <StackPanel>

            <TextBlock
              Style="{DynamicResource LabelControl}"
              TextWrapping="Wrap"
              Text="{Binding Tag}" />

            <xctk:ColorPicker
              SelectedColor="{Binding Color, Mode=TwoWay}" />

          </StackPanel>

        </DataTemplate>

      </ItemsControl.ItemTemplate>

    </ItemsControl>

    <StackPanel
      Margin="0 20 0 0"
      Orientation="Horizontal"
      HorizontalAlignment="Right">
      <Button
        x:Name="Save"
        Content="{lex:Loc Save}" />
      <Button
        x:Name="Cancel"
        Content="{lex:Loc Abort}"
        Margin="12 0 0 0" />

    </StackPanel>

  </StackPanel>

</UserControl>